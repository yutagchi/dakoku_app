
<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta http-equiv="Content-Language" content="ja">
    <meta name="google" content="notranslate">
    <title>打刻アプリ</title>
    <link rel="stylesheet" href="style.css">
  </head>
  
  <body>
    <script> //時間と日付表示用のスクリプト
      function set2fig(num) {
        // 桁数が1桁だったら先頭に0を加えて2桁に調整する
        var ret;
        if( num < 10 ) { ret = "0" + num; }
        else { ret = num; }
        return ret;
      }
      function showClock_time() {
        var nowTime = new Date();
        var nowHour = set2fig( nowTime.getHours() );
        var nowMin  = set2fig( nowTime.getMinutes() );
        var nowSec  = set2fig( nowTime.getSeconds() );
        var msg_time = nowHour + ":" + nowMin + ":" + nowSec;
        document.getElementById("RealtimeClockArea").innerHTML = msg_time;
      }
      setInterval('showClock_time()',100);

      function showClock_Date() {
        var nowTime = new Date();
        var nowYear = nowTime.getFullYear();
        var nowMonth = set2fig( nowTime.getMonth()+1 );
        var nowDate = set2fig( nowTime.getDate() );
        var nowDay_int = nowTime.getDay();

        if(nowDay_int === 0){
          var nowDay = "日"; 
        }else if(nowDay_int === 1){
          var nowDay = "月"; 
        }else if(nowDay_int === 2){
          var nowDay = "火"; 
        }else if(nowDay_int === 3){
          var nowDay = "水"; 
        }else if(nowDay_int === 4){
          var nowDay = "木"; 
        }else if(nowDay_int === 5){
          var nowDay = "金"; 
        }else{
          var nowDay = "土"; 
        }

        var msg_date = nowYear + "年" + nowMonth + "月" + nowDate + "日 (" + nowDay + ")";
        document.getElementById("clock_date").innerHTML = msg_date;
      }
      setInterval('showClock_Date()',100);
    </script>

    <div class="header"> <!-- ヘッダー -->
      <div class="header-logo">打刻アプリ</div>
      <div class="header-list">
        <ul>
          <li><a class="link" href="/">ホーム</a></li>
          <li><a class="link" href="/begin">出勤</a></li>
          <li><a class="link" href="/finish">退勤</a></li>
          <li><a class="link" href="/timestamp_list">打刻一覧</a></li>
          <li><a class="link" href="/todolist">TODOリスト編集</a></li>
          <li><a class="link" href="/setting">設定</a></li>
        </ul>
      </div>
    </div>

    <div class="status-area">
      <h1 id="RealtimeClockArea"></h1>
      <h2 id="clock_date"></h2>
      <h3>今日の勤務時間:<%= timediff.timediff %> <%= nowAtWork %></h3>
    </div>
    
   <div class="buttonrwrapper">
      <a class="btn message" href="/finish">退勤</a>
  </div>
  </body>
</html>